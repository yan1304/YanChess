<Window x:Class="YanChess.UserInterface.Windows.Option"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YanChess.UserInterface.Windows"
        xmlns:local1="clr-namespace:YanChess.UserInterface.UserControls"
        mc:Ignorable="d"
        Title="Параметры игры" Height="400" Width="300">
    <Grid Background="#FFD3C275">
        <StackPanel>
            <local1:GameOption x:Name="option"/>
            <Button x:Name="buttonStart" FontSize="30" Template="{StaticResource sbTemplate}" Content="Новая игра" Margin="20 20 20 0" MinHeight="50" MinWidth="100" Click="buttonStart_Click" />
            <Button x:Name="buttonOption" FontSize="28" Template="{StaticResource sbTemplate}" Content="Настройки движка" Margin="20 20 20 0" MinHeight="50" MinWidth="100" Click="buttonOption_Click" />
        </StackPanel>
    </Grid>
</Window>
